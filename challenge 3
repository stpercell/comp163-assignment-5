#========================================================
rows = 10
columns = 10

print("")
print("=== Challenge 3: Multiplication Table ===")
print("Multiplication Table:")

print("", end="")
for col in range(1, columns + 1):
    print(f"{col:4}", end="")
print()

for row in range(1, rows + 1):
    print(f"{row:4} ", end="")
    for col in range(1, columns + 1):
        product = row * col
        print(f"{product:4}", end="")
    print()
